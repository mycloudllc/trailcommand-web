{
  "api": {
    "host": "api.trailcommandpro.com",
    "port": 443
  },
  "server": {
    "host": "api.trailcommandpro.com",
    "port": 443
  },
  "auth": {
    "email": "admin@example.com",
    "password": "your_password_here"
  },
  "device": {
    "id": "TrailCommandProTest",
    "name": "TrailCommand Pro Device Test",
    "type": "sensor_station",
    "description": "ARM Linux IoT Device for Testing",
    "uuid": ""
  },
  "sensors": {
    "temperature": {
      "enabled": true,
      "type": "simulated",
      "pin": null,
      "sensor_model": "DS18B20",
      "min_value": 15,
      "max_value": 35,
      "unit": "Â°C"
    },
    "humidity": {
      "enabled": true,
      "type": "simulated",
      "pin": null,
      "sensor_model": "DHT22",
      "min_value": 30,
      "max_value": 80,
      "unit": "%"
    },
    "pressure": {
      "enabled": true,
      "type": "simulated",
      "pin": null,
      "sensor_model": "BMP280",
      "min_value": 980,
      "max_value": 1020,
      "unit": "hPa"
    },
    "battery": {
      "enabled": true,
      "type": "simulated",
      "pin": null,
      "sensor_model": "voltage_divider",
      "min_value": 20,
      "max_value": 100,
      "unit": "%"
    },
    "light": {
      "enabled": true,
      "type": "simulated",
      "pin": null,
      "sensor_model": "photoresistor",
      "min_value": 0,
      "max_value": 1000,
      "unit": "lux"
    },
    "motion": {
      "enabled": false,
      "type": "real",
      "pin": 18,
      "sensor_model": "PIR_HC-SR501",
      "min_value": 0,
      "max_value": 1,
      "unit": "bool"
    },
    "distance": {
      "enabled": false,
      "type": "real",
      "pin": {
        "trigger": 23,
        "echo": 24
      },
      "sensor_model": "HC-SR04",
      "min_value": 2,
      "max_value": 400,
      "unit": "cm"
    }
  },
  "controls": {
    "relay_1": {
      "enabled": true,
      "pin": 4,
      "type": "digital_output",
      "name": "Main Relay",
      "description": "Controls main power relay",
      "default_state": false,
      "inverted": false
    },
    "relay_2": {
      "enabled": true,
      "pin": 6,
      "type": "digital_output",
      "name": "Main Relay",
      "description": "Controls main power relay",
      "default_state": false,
      "inverted": false
    },
    "relay_3": {
      "enabled": true,
      "pin": 22,
      "type": "digital_output",
      "name": "Main Relay",
      "description": "Controls main power relay",
      "default_state": false,
      "inverted": false
    },
    "relay_4": {
      "enabled": true,
      "pin": 26,
      "type": "digital_output",
      "name": "Main Relay",
      "description": "Controls main power relay",
      "default_state": false,
      "inverted": false
    },
    "led_builtin": {
      "enabled": true,
      "pin": 16,
      "type": "digital_output",
      "name": "Status LED",
      "description": "Device status indicator LED",
      "default_state": false,
      "inverted": false
    },
    "fan_control": {
      "enabled": false,
      "pin": 12,
      "type": "pwm_output",
      "name": "Cooling Fan",
      "description": "PWM controlled cooling fan",
      "default_state": 0,
      "min_value": 0,
      "max_value": 255
    }
  },
  "settings": {
    "send_interval": 5000,
    "log_level": "info",
    "gpio_mode": "BCM",
    "auto_cleanup_gpio": true,
    "debounce_time": 200
  }
}
