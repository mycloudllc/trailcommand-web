# TrailCommand Web Server - Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=443
HOST=0.0.0.0

# Privilege Dropping
DROP_USER=trailcommand
DROP_GROUP=trailcommand

# SSL Configuration
SSL_KEY_PATH=/etc/ssl/private/trailcommand.key
SSL_CERT_PATH=/etc/ssl/certs/trailcommand.crt

# Security Settings
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Application Settings
BUILD_PATH=./build

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/trailcommand/web.log

# Health Check
HEALTH_CHECK_PATH=/health

# Rate Limiting (requests per minute)
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=60000