# TrailCommand Pro Environment Configuration
# Copy this file to .env for local development or use these variables in production

# API Configuration
REACT_APP_API_HOST=api.trailcommandpro.com
REACT_APP_API_PORT=443
REACT_APP_API_PROTOCOL=https

# Application Settings
REACT_APP_NAME="TrailCommand Pro"
REACT_APP_VERSION=1.0.0

# Polling Intervals (milliseconds)
REACT_APP_SENSOR_INTERVAL=5000
REACT_APP_CONNECTION_CHECK_INTERVAL=60000

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_SHOW_SERVER_CONFIG=false

# Features
REACT_APP_ENABLE_DEVICE_MANAGEMENT=true
REACT_APP_ENABLE_WIDGET_CUSTOMIZATION=true
REACT_APP_ENABLE_REALTIME_UPDATES=true
REACT_APP_ENABLE_DATA_EXPORT=true

# Socket.IO Configuration
REACT_APP_SOCKET_TIMEOUT=20000
REACT_APP_SOCKET_RECONNECT_ATTEMPTS=3
REACT_APP_SOCKET_RECONNECT_DELAY=1000

# Security
REACT_APP_ADMIN_ROLES="admin,superuser"

# Development/Production Settings
NODE_ENV=production
GENERATE_SOURCEMAP=false
REACT_APP_BUILD_DATE=2025-01-19